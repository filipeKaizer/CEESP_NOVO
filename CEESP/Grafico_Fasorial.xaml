<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CEESP"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Name="Page" x:Class="CEESP.Grafico_Fasorial"
      mc:Ignorable="d"
      Title="Grafico_Fasorial" Foreground="{x:Null}" Width="1280" Height="704" HorizontalAlignment="Left" VerticalAlignment="Top">

    <Page.Resources>
        <Style x:Key="NoMouseOverButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid x:Name="Grid" Width="1280" Height="704" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Canvas x:Name="Graph" HorizontalAlignment="Left" Width="1280" Height="704" Background="#19000000" VerticalAlignment="Top" Cursor="Arrow"/>
        <Label x:Name="TimeSelected" Content="2s" Background="{x:Null}" Foreground="#99DEDEDE" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="56,665,0,0"/>
        <Button x:Name="refresh" Content="Button" Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="99,653,0,0" Cursor="Hand">
            <Button.OpacityMask>
                <ImageBrush ImageSource="/icons/refresh.png"/>
            </Button.OpacityMask>
            <Button.Background>
                <ImageBrush ImageSource="/icons/refresh.png"/>
            </Button.Background>
        </Button>
        <ComboBox x:Name="CBTimes" Margin="34,653,0,0" Width="28" Height="28" BorderBrush="{x:Null}" Foreground="#FF17006D" HorizontalAlignment="Left" VerticalAlignment="Top" SelectionChanged="CBTimes_SelectionChanged" Cursor="Hand" RenderTransformOrigin="0.512,0.607">
            <ComboBox.OpacityMask>
                <ImageBrush ImageSource="/icons/Timer.png"/>
            </ComboBox.OpacityMask>
            <ComboBox.Background>
                <ImageBrush ImageSource="/icons/Timer.png"/>
            </ComboBox.Background>
        </ComboBox>
        <Grid x:Name="Values" Height="30" Width="656" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="192,653,0,0">
            <Rectangle HorizontalAlignment="Center" VerticalAlignment="Center" RadiusX="5" RadiusY="5" Fill="#3F000000" Width="656" Height="30"/>
            <Rectangle x:Name="rtVa" Height="14" Width="15" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Fill="#FF429743" RadiusX="2" RadiusY="2"/>
            <Label x:Name="VaValue" Content="Va: 0V" FontFamily="Arial Rounded MT Bold" Width="70" Foreground="#FFAFAFAF" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25,0,0,0" Padding="2,0,0,0"/>
            <Rectangle x:Name="rtIa" Height="14" Width="15" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="100,0,0,0" Fill="#FFE71717" RadiusX="2" RadiusY="2"/>
            <Label x:Name="IaValue" Content="Ia: 0A" FontFamily="Arial Rounded MT Bold" Width="91" Foreground="#FFAFAFAF" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="115,0,0,0" Padding="2,0,0,0"/>
            <Rectangle x:Name="rtEa" Height="14" Width="15" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="211,0,0,0" Fill="#FFA6016F" RadiusX="2" RadiusY="2"/>
            <Label x:Name="EaValue" Content="Ea: 0V" FontFamily="Arial Rounded MT Bold" Width="82" Foreground="#FFAFAFAF" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="226,0,0,0" Padding="2,0,0,0"/>
            <Rectangle x:Name="rtXsIa" Height="14" Width="15" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="313,0,0,0" Fill="#FFC15100" RadiusX="2" RadiusY="2"/>
            <Label x:Name="XsIa" Content="XsIa: 0v" FontFamily="Arial Rounded MT Bold" Width="110" Foreground="#FFAFAFAF" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="328,0,0,0" Padding="2,0,0,0"/>
            <Rectangle x:Name="rtFP" Height="14" Width="15" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="443,0,0,0" Fill="#FF3D0D2C" RadiusX="2" RadiusY="2"/>
            <Label x:Name="FPValue" Content="Cos(φ): 90º" FontFamily="Arial Rounded MT Bold" Width="78" Foreground="#FFAFAFAF" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="463,0,0,0" Padding="2,0,0,0"/>
            <Label x:Name="type" Content="Indutivo" FontFamily="Arial Rounded MT Bold" Width="74" Foreground="#FFAFAFAF" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="572,0,0,0" Padding="2,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>
        <Grid x:Name="Zoom" Margin="0,653,230,0" Width="162" VerticalAlignment="Top" HorizontalAlignment="Right">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Rectangle Height="30" Width="187" HorizontalAlignment="Left" VerticalAlignment="Top" RadiusX="5" RadiusY="5" Fill="#33000000" Margin="-25,0,0,0" Grid.RowSpan="2"/>
            <Slider x:Name="Slider" Margin="7,0,0,10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="106" Height="20" ValueChanged="Slider_ValueChanged" Cursor="Hand" Grid.RowSpan="2"/>
            <Label x:Name="LabelZoom" Content="1x" HorizontalAlignment="Left" Margin="118,2,0,0" VerticalAlignment="Top" FontFamily="Algerian" Width="41" Foreground="#FFAFAFAF" HorizontalContentAlignment="Center" Grid.RowSpan="2"/>
            <Button x:Name="AutosizeButton" Style="{StaticResource NoMouseOverButtonStyle}" Content="M" Margin="-23,0,160,5" Height="30" Width="25" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFAFAFAF" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Corbel" FontSize="13" Click="AutosizeButton_Click" Cursor="Hand" AutomationProperties.HelpText="Autosize"/>
        </Grid>
        <ComboBox x:Name="Phase" Canvas.Left="312" Canvas.Top="410" Width="176" Height="30" BorderBrush="{x:Null}" OpacityMask="#19000000" Background="#191E1E1E" Foreground="Black" Cursor="Hand" ScrollViewer.HorizontalScrollBarVisibility="Auto" Margin="1008,653,30,0" VerticalAlignment="Top" SelectionChanged="Phase_SelectionChanged" HorizontalAlignment="Right" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14">
            <ComboBoxItem Content="Media"/>
            <ComboBoxItem Cursor="Hand" Content="Fase A"/>
            <ComboBoxItem Content="Fase B"/>
            <ComboBoxItem Cursor="Hand" Content="Fase C"/>
        </ComboBox>


    </Grid>
</Page>
